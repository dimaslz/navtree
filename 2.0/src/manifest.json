{
  "name": "NavTree for Github",
  "short_name": "Navtree-github",
  "author": "Dimas LÃ³pez Zurita (dimaslz) | me@dimaslz.io",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "NavTree for Github is a extension for improve the navigation between files on Github.",
  "web_accessible_resources": [
    "assets/*",
    "*.js"
  ],
  // "options_page": "./index.html",
  // "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_security_policy": "connect-src * data: blob: filesystem:; default-src 'self'; script-src 'self' 'unsafe-eval'; object-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:; font-src *",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["https://github.com/*/*"],
      "css": [
        // "style.css"
      ],
      "js": [
        "highlight.pack.js",
        "index.js"
      ]
    }
  ],
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}